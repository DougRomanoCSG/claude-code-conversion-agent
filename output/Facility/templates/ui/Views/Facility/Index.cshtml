@model BargeOpsAdmin.ViewModels.FacilitySearchViewModel
@{
    ViewData["Title"] = "Facility Search";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Facility Search</h2>

            <!-- Search Criteria Panel -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Search Criteria</h5>
                </div>
                <div class="card-body">
                    <form id="searchForm">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter facility name" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="ShortName" class="form-label"></label>
                                    <input asp-for="ShortName" class="form-control" placeholder="Enter short name" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="River" class="form-label"></label>
                                    <select asp-for="River" asp-items="Model.Rivers" class="form-select"></select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="BargeExLocationType" class="form-label"></label>
                                    <select asp-for="BargeExLocationType" asp-items="Model.FacilityTypes" class="form-select"></select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="BargeExCode" class="form-label"></label>
                                    <input asp-for="BargeExCode" class="form-control" placeholder="Enter BargeEx code" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <div class="form-check mt-4">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsActive" class="form-check-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="button" id="btnSearch" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Search
                                </button>
                                <button type="button" id="btnClear" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Clear
                                </button>
                                <a asp-action="Create" class="btn btn-success">
                                    <i class="bi bi-plus-circle"></i> New Facility
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Results Grid -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Search Results</h5>
                </div>
                <div class="card-body">
                    <table id="facilityTable" class="table table-striped table-bordered table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Short Name</th>
                                <th>River</th>
                                <th>Mile</th>
                                <th>Facility Type</th>
                                <th>BargeEx Code</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/facility-search.js"></script>
}
