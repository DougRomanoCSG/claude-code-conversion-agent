@model BargeOpsAdmin.ViewModels.BargeSeriesSearchViewModel
@{
    ViewData["Title"] = "Barge Series";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>

    <!-- Search Criteria Card -->
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0">Search Criteria</h5>
        </div>
        <div class="card-body">
            <form id="searchForm">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="SeriesName" class="form-label"></label>
                        <input asp-for="SeriesName" class="form-control" placeholder="Enter series name..." />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CustomerID" class="form-label"></label>
                        <select asp-for="CustomerID" asp-items="Model.Customers" class="form-select" data-select2="true">
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="HullType" class="form-label"></label>
                        <select asp-for="HullType" asp-items="Model.HullTypes" class="form-select" data-select2="true">
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="CoverType" class="form-label"></label>
                        <select asp-for="CoverType" asp-items="Model.CoverTypes" class="form-select" data-select2="true">
                        </select>
                    </div>
                    <div class="col-md-2">
                        <div class="form-check mt-4">
                            <input asp-for="ActiveOnly" class="form-check-input" />
                            <label asp-for="ActiveOnly" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="button" id="btnSearch" class="btn btn-primary">
                            <i class="fas fa-search"></i> Find
                        </button>
                        <button type="button" id="btnReset" class="btn btn-secondary">
                            <i class="fas fa-undo"></i> Reset
                        </button>
                        @if (Model.CanCreate)
                        {
                            <a asp-action="Create" class="btn btn-success float-end">
                                <i class="fas fa-plus"></i> New Barge Series
                            </a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Grid Card -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Search Results</h5>
        </div>
        <div class="card-body">
            <table id="bargeSeriesTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>Series</th>
                        <th>Customer</th>
                        <th>Hull Type</th>
                        <th>Cover Type</th>
                        <th>Dimensions</th>
                        <th>Light Draft</th>
                        <th>TPI</th>
                        <th>Active</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- DataTables will populate this -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/barge-series-search.js"></script>
    <script>
        window.bargeSeriesSearch.init({
            canModify: @Model.CanModify.ToString().ToLower(),
            canDelete: @Model.CanDelete.ToString().ToLower()
        });
    </script>
}
