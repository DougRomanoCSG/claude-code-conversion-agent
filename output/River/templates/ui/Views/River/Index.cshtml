@model RiverSearchViewModel
@{
    ViewData["Title"] = "Rivers/Waterways";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-water"></i> @ViewData["Title"]</h2>
            <hr />

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Search Criteria Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-search"></i> Search Criteria</h5>
                </div>
                <div class="card-body">
                    <form id="searchForm">
                        <div class="row mb-3">
                            <div class="col-md-2">
                                <label asp-for="Code" class="form-label"></label>
                                <input asp-for="Code" class="form-control" placeholder="Code..." />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="River/Waterway name..." />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label d-block">Filter Options</label>
                                <div class="form-check form-check-inline">
                                    <input asp-for="ActiveOnly" class="form-check-input" />
                                    <label asp-for="ActiveOnly" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="button" id="btnSearch" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Find
                                </button>
                                <button type="button" id="btnReset" class="btn btn-secondary">
                                    <i class="fas fa-undo"></i> Reset
                                </button>
                                <a href="@Url.Action("Create")" class="btn btn-success float-end">
                                    <i class="fas fa-plus"></i> Add New River
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Results Grid Card -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-list"></i> Search Results</h5>
                </div>
                <div class="card-body">
                    <table id="riverTable" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>River/Waterway</th>
                                <th>Start Mile</th>
                                <th>End Mile</th>
                                <th>Low to High</th>
                                <th>Active</th>
                                <th>Upstream</th>
                                <th>Downstream</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/river-search.js"></script>
}
