@model RiverEditViewModel
@{
    ViewData["Title"] = Model.IsNew ? "Add New River" : "Edit River";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-water"></i> @ViewData["Title"]
                    </h5>
                </div>

                <form asp-action="Edit" method="post" class="needs-validation">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="River.RiverID" />

                    <div class="card-body">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="River.Name" class="form-label"></label>
                            <input asp-for="River.Name" class="form-control" placeholder="Enter river/waterway name..." />
                            <span asp-validation-for="River.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="River.Code" class="form-label"></label>
                            <input asp-for="River.Code" class="form-control" placeholder="3-character code..." maxlength="3" />
                            <span asp-validation-for="River.Code" class="text-danger"></span>
                            <small class="form-text text-muted">Must be exactly 3 alphanumeric characters (automatically converted to uppercase)</small>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="River.StartMile" class="form-label"></label>
                                <input asp-for="River.StartMile" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="River.StartMile" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="River.EndMile" class="form-label"></label>
                                <input asp-for="River.EndMile" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="River.EndMile" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="River.BargeExCode" class="form-label"></label>
                            <input asp-for="River.BargeExCode" class="form-control" placeholder="BargeEx integration code..." maxlength="10" />
                            <span asp-validation-for="River.BargeExCode" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="River.UpLabel" class="form-label"></label>
                                <input asp-for="River.UpLabel" class="form-control" placeholder="Upstream label..." maxlength="20" />
                                <span asp-validation-for="River.UpLabel" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="River.DownLabel" class="form-label"></label>
                                <input asp-for="River.DownLabel" class="form-control" placeholder="Downstream label..." maxlength="20" />
                                <span asp-validation-for="River.DownLabel" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="River.IsLowToHighDirection" class="form-check-input" />
                                <label asp-for="River.IsLowToHighDirection" class="form-check-label"></label>
                                <br />
                                <small class="form-text text-muted">Check if mile markers increase in the downstream direction (like the Mississippi River)</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <input asp-for="River.IsActive" class="form-check-input" />
                            <label asp-for="River.IsActive" class="form-check-label"></label>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Submit
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/river-detail.js"></script>
}
