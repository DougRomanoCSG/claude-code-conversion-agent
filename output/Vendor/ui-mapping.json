  "javascriptPatterns": {
    "searchFormInit": {
      "description": "Initialize search form with Select2 and DataTables",
      "file": "vendorSearch.js",
      "location": "src/BargeOps.UI/wwwroot/js/vendorSearch.js",
      "pattern": "$(document).ready() initialization",
      "references": [
        "boatLocationSearch.js for DataTables pattern",
        "Select2 documentation for dropdown enhancement"
      ]
    },
    "detailFormInit": {
      "description": "Initialize detail form with validation and conditional fields",
      "file": "vendorEdit.js",
      "location": "src/BargeOps.UI/wwwroot/js/vendorEdit.js",
      "pattern": "$(document).ready() initialization with conditional validation",
      "conditionalValidation": {
        "trigger": "IsBargeExEnabled checkbox change",
        "action": "Enable/disable and require BargeExTradingPartnerNum and BargeExConfigID",
        "javascript": "$('#IsBargeExEnabled').on('change', function() {\n  var isEnabled = $(this).is(':checked');\n  $('#BargeExTradingPartnerNum, #BargeExConfigID')\n    .prop('disabled', !isEnabled)\n    .prop('required', isEnabled);\n});"
      }
    },
    "dataTableReload": {
      "description": "Reload DataTable when search criteria changes",
      "pattern": "$('#btnSearch').click(function() {\n  dataTable.ajax.reload();\n});"
    },
    "formReset": {
      "description": "Reset form and reload DataTable",
      "pattern": "$('#btnReset').click(function() {\n  $('#searchForm')[0].reset();\n  $('.select2').val('').trigger('change');\n  dataTable.ajax.reload();\n});"
    }
  },
