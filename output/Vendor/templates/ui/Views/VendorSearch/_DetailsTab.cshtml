@model VendorEditViewModel

<div class="row">
    <!-- Left Column: Vendor Information -->
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Vendor Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Vendor.Name" class="form-label"></label>
                        <input asp-for="Vendor.Name" class="form-control" maxlength="20" required />
                        <span asp-validation-for="Vendor.Name" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Vendor.LongName" class="form-label"></label>
                        <input asp-for="Vendor.LongName" class="form-control" maxlength="50" required />
                        <span asp-validation-for="Vendor.LongName" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Vendor.AccountingCode" class="form-label"></label>
                        <input asp-for="Vendor.AccountingCode" class="form-control" maxlength="20" />
                        <span asp-validation-for="Vendor.AccountingCode" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Vendor.Address" class="form-label"></label>
                        <textarea asp-for="Vendor.Address" class="form-control" rows="3" maxlength="80"></textarea>
                        <span asp-validation-for="Vendor.Address" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Vendor.City" class="form-label"></label>
                        <input asp-for="Vendor.City" class="form-control" maxlength="30" />
                        <span asp-validation-for="Vendor.City" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Vendor.State" class="form-label"></label>
                        <select asp-for="Vendor.State" asp-items="Model.States" class="form-select select2">
                            <option value="">-- Select --</option>
                        </select>
                        <span asp-validation-for="Vendor.State" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Vendor.Zip" class="form-label"></label>
                        <input asp-for="Vendor.Zip" class="form-control" maxlength="10" data-mask="00000-0000" />
                        <span asp-validation-for="Vendor.Zip" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Vendor.PhoneNumber" class="form-label"></label>
                        <input asp-for="Vendor.PhoneNumber" type="tel" class="form-control" maxlength="14" data-mask="(000) 000-0000" />
                        <span asp-validation-for="Vendor.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Vendor.FaxNumber" class="form-label"></label>
                        <input asp-for="Vendor.FaxNumber" type="tel" class="form-control" maxlength="14" data-mask="(000) 000-0000" />
                        <span asp-validation-for="Vendor.FaxNumber" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Vendor.EmailAddress" class="form-label"></label>
                        <input asp-for="Vendor.EmailAddress" type="email" class="form-control" maxlength="100" />
                        <span asp-validation-for="Vendor.EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Vendor.TermsCode" class="form-label"></label>
                        <select asp-for="Vendor.TermsCode" asp-items="Model.TermsCodes" class="form-select select2">
                            <option value="">-- Select --</option>
                        </select>
                        <span asp-validation-for="Vendor.TermsCode" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <div class="form-check">
                            <input asp-for="Vendor.IsInternalVendor" class="form-check-input" type="checkbox" />
                            <label asp-for="Vendor.IsInternalVendor" class="form-check-label"></label>
                        </div>
                    </div>
                    @if (Model.UnitTowLicenseActive)
                    {
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="Vendor.IsLiquidBroker" class="form-check-input" type="checkbox" />
                                <label asp-for="Vendor.IsLiquidBroker" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="Vendor.IsTankerman" class="form-check-input" type="checkbox" />
                                <label asp-for="Vendor.IsTankerman" class="form-check-label"></label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: Contacts -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Contacts</h5>
                <div>
                    <button type="button" class="btn btn-sm btn-primary" id="btnAddContact">
                        <i class="fas fa-plus"></i> Add
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table id="contactsTable" class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th style="width: 60px;">Actions</th>
                            <th>Name</th>
                            <th class="text-center">Primary</th>
                            <th>Phone</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Vendor.VendorContacts?.Any() == true)
                        {
                            @foreach (var contact in Model.Vendor.VendorContacts)
                            {
                                <tr>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-primary btn-edit-contact" data-id="@contact.VendorContactID">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger btn-delete-contact" data-id="@contact.VendorContactID">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                    <td>@contact.Name</td>
                                    <td class="text-center">
                                        @if (contact.IsPrimary)
                                        {
                                            <i class="fas fa-check text-success"></i>
                                        }
                                    </td>
                                    <td>@contact.PhoneNumber</td>
                                    <td>@contact.EmailAddress</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No contacts yet</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Contact modal will be injected here via JavaScript -->
<div id="contactModalContainer"></div>