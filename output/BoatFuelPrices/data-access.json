  "businessRules": {
    "calculatedFields": [
      {
        "field": "TotalCost",
        "calculation": "PricePerGallon * Quantity",
        "description": "Total cost can be calculated from price per gallon and quantity",
        "validation": "If both PricePerGallon and Quantity are provided, TotalCost should match the calculation"
      }
    ],
    "requiredFields": [
      {
        "field": "BoatID",
        "description": "Boat is always required for fuel price records"
      },
      {
        "field": "FuelType",
        "description": "Fuel type is always required"
      },
      {
        "field": "PriceDate",
        "description": "Price date is always required"
      },
      {
        "field": "PricePerGallon",
        "description": "Price per gallon is always required"
      }
    ],
    "validationRules": [
      {
        "rule": "EndDate >= StartDate",
        "description": "End date must be greater than or equal to start date in search"
      },
      {
        "rule": "MaxPrice >= MinPrice",
        "description": "Max price must be greater than or equal to min price in search"
      },
      {
        "rule": "PricePerGallon > 0",
        "description": "Price per gallon must be positive"
      },
      {
        "rule": "Quantity >= 0",
        "description": "Quantity must be non-negative"
      },
      {
        "rule": "PriceDate <= Current Date",
        "description": "Price date cannot be in the future"
      },
      {
        "rule": "If Quantity and TotalCost provided, verify calculation",
        "description": "TotalCost should equal PricePerGallon * Quantity (within rounding tolerance)"
      }
    ],
    "dataIntegrity": [
      {
        "rule": "Foreign key to Boat table",
        "description": "BoatID must reference valid Boat record"
      },
      {
        "rule": "Foreign key to Location table",
        "description": "LocationID must reference valid Location record if provided"
      },
      {
        "rule": "Foreign key to Vendor table",
        "description": "VendorID must reference valid Vendor record if provided"
      }
    ]
  },
