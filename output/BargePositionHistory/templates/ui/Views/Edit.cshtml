@model BargeOpsAdmin.ViewModels.BargePositionHistoryEditViewModel
@{
    ViewData["Title"] = Model.FleetPositionHistoryID == 0 ? "Create Barge Position History" : "Edit Barge Position History";
}

@* Target: C:\Dev\BargeOps.Admin.Mono\src\BargeOps.UI\Views\BargePositionHistory\Edit.cshtml *@

<div class="container-fluid">
    <h2>@ViewData["Title"] - @Model.FleetName</h2>

    <form asp-action="Save" method="post" id="editForm">
        <input type="hidden" asp-for="FleetPositionHistoryID" />
        <input type="hidden" asp-for="FleetID" />
        <input type="hidden" asp-for="TierGroupID" />
        <input type="hidden" asp-for="ModifyDateTime" />
        @Html.AntiForgeryToken()

        @* Validation Summary *@
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="card mb-3">
            <div class="card-header">Detail</div>
            <div class="card-body">
                @* DateTime Split Pattern (CRITICAL!) *@
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Position Date *</label>
                        <input type="date" class="form-control" id="dtPositionDate" required />
                        <span class="text-danger" id="dateError"></span>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold">Position Time (24-hour) *</label>
                        <input type="time" class="form-control" id="dtPositionTime" required />
                        <span class="text-danger" id="timeError"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="BargeNum" class="form-label fw-bold"></label>
                        <input asp-for="BargeNum" class="form-control" type="text" />
                        <span asp-validation-for="BargeNum" class="text-danger"></span>
                    </div>
                    <div class="col-md-2 d-flex align-items-center pt-4">
                        <div class="form-check">
                            <input asp-for="LeftFleet" class="form-check-input" type="checkbox" />
                            <label asp-for="LeftFleet" class="form-check-label">Left Fleet</label>
                        </div>
                    </div>
                </div>

                @* Tier Position Fields (Conditionally Disabled) *@
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="TierID" class="form-label">Tier</label>
                        <select asp-for="TierID" asp-items="Model.Tiers" class="form-select" data-select2="true">
                            <option value="">-- Select Tier --</option>
                        </select>
                        <span asp-validation-for="TierID" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="TierX" class="form-label">Tier X</label>
                        <input asp-for="TierX" class="form-control" type="number" min="-32768" max="32767" />
                        <span asp-validation-for="TierX" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="TierY" class="form-label">Tier Y</label>
                        <input asp-for="TierY" class="form-control" type="number" min="-32768" max="32767" />
                        <span asp-validation-for="TierY" class="text-danger"></span>
                    </div>
                </div>

                @* Action Buttons *@
                <div class="row">
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Submit
                        </button>
                        <a asp-action="Index" asp-route-fleetId="@Model.FleetID" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/bargePositionHistory-detail.js"></script>
    <script>
        $(function() {
            BargePositionHistoryDetail.init({
                positionStartDateTime: '@Model.PositionStartDateTime.ToString("o")',
                leftFleet: @Model.LeftFleet.ToString().ToLower()
            });
        });
    </script>
}
