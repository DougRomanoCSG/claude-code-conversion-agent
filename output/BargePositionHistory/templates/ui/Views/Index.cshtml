@model BargeOpsAdmin.ViewModels.BargePositionHistorySearchViewModel
@{
    ViewData["Title"] = "Barge Position History";
}

@* Target: C:\Dev\BargeOps.Admin.Mono\src\BargeOps.UI\Views\BargePositionHistory\Index.cshtml *@

<div class="container-fluid">
    <h2>Barge Position History - @Model.FleetName</h2>

    @* Success/Error Messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Search Criteria Panel *@
    <div class="card mb-3">
        <div class="card-header">Search Criteria</div>
        <div class="card-body">
            <form id="searchForm">
                <input type="hidden" asp-for="FleetID" />

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="SearchDate" class="form-label fw-bold">Date *</label>
                        <input asp-for="SearchDate" class="form-control" type="date" />
                        <span asp-validation-for="SearchDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="TierGroupID" class="form-label fw-bold">Tier Group *</label>
                        <select asp-for="TierGroupID" asp-items="Model.TierGroups" class="form-select" data-select2="true">
                            <option value="">-- Select Tier Group --</option>
                        </select>
                        <span asp-validation-for="TierGroupID" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="BargeNum" class="form-label">Barge</label>
                        <input asp-for="BargeNum" class="form-control" type="text" />
                    </div>

                    <div class="col-md-2 d-flex align-items-end">
                        <button type="button" id="btnSearch" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Find
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="IncludeBlankTierPos" class="form-check-input" type="checkbox" />
                            <label asp-for="IncludeBlankTierPos" class="form-check-label">Include blank tier positions</label>
                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <button type="button" id="btnReset" class="btn btn-secondary">
                            <i class="fas fa-sync"></i> Reset
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Results Grid Panel *@
    <div class="card">
        <div class="card-header">Barge Positions</div>
        <div class="card-body">
            @* Toolbar *@
            <div class="btn-toolbar mb-3" role="toolbar">
                <div class="btn-group me-2" role="group">
                    @if (Model.CanModify)
                    {
                        <button type="button" class="btn btn-sm btn-success" id="btnAdd">
                            <i class="fas fa-plus"></i> Add
                        </button>
                        <button type="button" class="btn btn-sm btn-primary" id="btnModify" disabled>
                            <i class="fas fa-edit"></i> Modify
                        </button>
                    }
                    @if (Model.CanDelete)
                    {
                        <button type="button" class="btn btn-sm btn-danger" id="btnRemove" disabled>
                            <i class="fas fa-trash"></i> Remove
                        </button>
                    }
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-secondary" id="btnExport">
                        <i class="fas fa-file-export"></i> Export
                    </button>
                </div>
            </div>

            @* DataTable *@
            <table id="bargePositionHistoryTable" class="table table-striped table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Date/Time</th>
                        <th>Barge</th>
                        <th>Left Fleet</th>
                        <th>Tier</th>
                        <th>Tier Pos</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/bargePositionHistory-search.js"></script>
    <script>
        $(function() {
            BargePositionHistorySearch.init({
                fleetId: @Model.FleetID,
                canModify: @Model.CanModify.ToString().ToLower(),
                canDelete: @Model.CanDelete.ToString().ToLower()
            });
        });
    </script>
}
