    "cboToLocationType_ValueChanged": "Populates cboToLocationID based on selected type; if Boat selected, sets FromLocationType to Facility and makes it readonly",
    "cboFromLocationID_AfterSortChange": "Repopulates combo with alternate list (Full/Filtered toggle)",
    "cboToLocationID_AfterSortChange": "Repopulates combo with alternate list (Full/Filtered toggle)",
    "cboFleetBoatID_AfterSortChange": "Repopulates combo with alternate list (Full/Filtered toggle)",
    "grdSearch_InitializeRow": "Applies special formatting (gray strikethrough) to voided events",
    "ValidatorExtender_MessageSet": "Sets status bar text on main form with validation messages",
    "OnChangeOfFleet": "Clears location and fleet boat combos, repopulates with new fleet data, resets to Facility defaults"
  },
  "businessLogic": {
    "searchLogic": {
      "method": "RefreshList",
      "storedProcedure": "BargeEventSearch.GetList",
      "parameters": [
        "_SelectedFleetID",
        "txtEventRateID.Text",
        "cboEventTypeID.Value",
        "cboEventCustomerID.Value",
        "cboFromLocationID.Value",
        "cboToLocationID.Value",
        "cboFleetBoatID.Value",
        "startDate",
        "endDate",
        "chkIncludeVoided.Checked",
        "txtContractNumber.Text.Trim",
        "txtBargeNum.Text",
        "cboTicketCustomerID.Value",
        "cboFreightCustomerID.Value"
      ],
      "requiresAtLeastOneCriteria": true
    },
    "itemModify": {
      "method": "ItemModify",
      "opensForm": "frmBargeEvent",
      "requiredData": ["BargeID", "TicketID", "TicketEventID"],
      "description": "Opens detail form for selected event"
    },
    "fleetDependency": {
      "memberVariable": "_SelectedFleetID",
      "affectedControls": [
        "cboFleetBoatID",
        "cboFromLocationID",
        "cboToLocationID"
      ],
      "onChangeAction": "Clear and repopulate fleet-dependent combos"
    },
    "locationTypeDependency": {
      "description": "FromLocationType and ToLocationType have mutual exclusivity logic - only one can be set to 'Boat' at a time"
    },
    "licenseDependency": {
      "component": "Freight",
      "affectedControls": [
        "txtContractNumber",
        "lblContractNumber",
        "cboFreightCustomerID",
        "lblFreightCustomerID"
      ],
      "affectedColumns": [
        "CpDateTime",
        "ReleaseDateTime",
        "LoadUnloadTons",
        "IsDefaultTons",
        "FreightCustomerName",
        "ContractNumber",
        "FreightOrigin",
        "FreightDestination"
      ],
      "action": "Hide controls/columns when license not active"
    },
    "rebillOperations": {
      "methods": ["MarkForRebill", "UnMarkForRebill"],
      "description": "Allows marking/unmarking selected events for rebilling",
      "requiresConfirmation": true,
      "worksOnSelectedRows": true
    }
  },
  "dataAccess": {
    "searchList": "Lists.BargeEventSearch.GetList",
    "lookupLists": [
      "Lists.EventTypeList.GetList",
      "Lists.CustomerList.GetList",
      "Lists.ValidationList.ShiftLocationType",
      "FleetBoat list (fleet-specific)",
