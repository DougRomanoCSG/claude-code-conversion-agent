@model BargeOpsAdmin.ViewModels.BoatStatusEditViewModel
@{
    ViewData["Title"] = $"{Model.BoatName} - Boat Status";
}

<div class="container-fluid">
    <h2>@ViewData["Title"]</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.ValidationErrors.Any())
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h5>Validation Errors:</h5>
            <ul>
                @foreach (var error in Model.ValidationErrors)
                {
                    <li>@error</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Master Grid Section -->
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list"></i> Maintenance Log
            </h5>
        </div>
        <div class="card-body">
            <button type="button" id="btnAdd" class="btn btn-success mb-3">
                <i class="fas fa-plus"></i> Add
            </button>
            <button type="button" id="btnExport" class="btn btn-secondary mb-3">
                <i class="fas fa-file-export"></i> Export
            </button>

            <div class="table-responsive">
                <table id="boatStatusTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Actions</th>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Division</th>
                            <th>Port Facility</th>
                            <th>Boat Role</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Detail Edit Section (hidden by default) -->
    <div class="card" id="detailSection" style="display:none;">
        <div class="card-header">
            <h5 class="card-title mb-0">Detail</h5>
        </div>
        <div class="card-body">
            <form id="detailForm" asp-action="SaveMaintenanceLog" asp-controller="BoatStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="BoatMaintenanceLogID" name="MaintenanceLog.BoatMaintenanceLogID" value="0" />
                <input type="hidden" id="LocationID" name="MaintenanceLog.LocationID" value="@Model.LocationID" />
                <input type="hidden" id="ModifyDateTime" name="MaintenanceLog.ModifyDateTime" />
                <input type="hidden" id="IsNew" value="true" />
                <input type="hidden" id="IsFleetBoat" value="@Model.IsFleetBoat.ToString().ToLower()" />

                <!-- â­ CRITICAL: Split DateTime Pattern (24-hour format) -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label required">Start Date</label>
                        <input type="date" class="form-control" id="dtStartDate" required />
                        <span class="text-danger" id="dtStartDate-error"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required">Start Time (24-hour)</label>
                        <input type="time" class="form-control" id="dtStartTime" required />
                        <span class="text-danger" id="dtStartTime-error"></span>
                    </div>
                </div>

                <!-- Maintenance Type Radio Buttons -->
                <div class="mb-3">
                    <label class="form-label required">Maintenance Type</label>
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="MaintenanceLog.MaintenanceType"
                                   id="optBoatStatus" value="Boat Status" checked />
                            <label class="form-check-label" for="optBoatStatus">
                                Boat Status
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="MaintenanceLog.MaintenanceType"
                                   id="optDivisionFacility" value="Change Division/Facility" />
                            <label class="form-check-label" for="optDivisionFacility">
                                Division / Facility
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="MaintenanceLog.MaintenanceType"
                                   id="optBoatRole" value="Change Boat Role" />
                            <label class="form-check-label" for="optBoatRole">
                                Boat Role
                            </label>
                        </div>
                    </div>
                    <span class="text-danger" id="MaintenanceType-error"></span>
                </div>

                <!-- Conditional Fields: Status Section -->
                <div class="mb-3" id="statusSection">
                    <label class="form-label required">Status</label>
                    <select name="MaintenanceLog.Status" class="form-select" data-select2="true" id="cboStatus">
                        <option value="">-- Select Status --</option>
                        @foreach (var item in Model.StatusList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span class="text-danger" id="Status-error"></span>
                </div>

                <!-- Conditional Fields: Division Section -->
                <div class="mb-3" id="divisionSection" style="display:none;">
                    <label class="form-label required">Division</label>
                    <select name="MaintenanceLog.Division" class="form-select" data-select2="true" id="cboDivision">
                        <option value="">-- Select Division --</option>
                        @foreach (var item in Model.Divisions)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span class="text-danger" id="Division-error"></span>
                </div>

                <!-- Conditional Fields: Port Facility Section -->
                <div class="mb-3" id="facilitySection" style="display:none;">
                    <label class="form-label">Port Facility</label>
                    <select name="MaintenanceLog.PortFacilityID" class="form-select" data-select2="true" id="cboPortFacility">
                        <option value="">-- Select Port Facility --</option>
                    </select>
                    <span class="text-danger" id="PortFacility-error"></span>
                </div>

                <!-- Conditional Fields: Boat Role Section -->
                <div class="mb-3" id="boatRoleSection" style="display:none;">
                    <label class="form-label required">Boat Role</label>
                    <select name="MaintenanceLog.BoatRoleID" class="form-select" data-select2="true" id="cboBoatRole">
                        <option value="">-- Select Boat Role --</option>
                        @foreach (var item in Model.BoatRoles)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span class="text-danger" id="BoatRole-error"></span>
                </div>

                <!-- Note Field -->
                <div class="mb-3">
                    <label class="form-label">Note</label>
                    <textarea name="MaintenanceLog.Note" class="form-control" rows="4" maxlength="500" id="txtNote" placeholder="Enter notes..."></textarea>
                    <span class="text-danger" id="Note-error"></span>
                </div>

                <!-- Action Buttons -->
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary" id="btnSet">
                            <i class="fas fa-save"></i> Save
                        </button>
                        <button type="button" class="btn btn-secondary" id="btnCancel">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Close Button -->
    <div class="mt-3">
        <a href="@Url.Action("Index", "BoatLocationSearch")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Boat Search
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/boatStatus.js"></script>
}
